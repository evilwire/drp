<% provide :title, "List of mentors" %>

<section>
    <div class = "section-wrapper">     
        <ul class='users-list'>
            <% @users.each do |user| %>
                <li>
                    <div class="user-box">
                        <div class="gravatar">
                            <%= gravatar_for user, size: '100' %>
                        </div>
                        <div class="info">
                            <h3>
                                <%= "#{user.first_name} #{user.last_name}"%>
                            </h3>
                            <div class="email">
                                <%= user.email %>
                            </div>
            <% profile = MentorProfile.find_by users_id: user.id %>
            <%= profile ? profile.bio : "" %>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>

</section>
