<% provide(:title, 'Apply for DRP') %>
<%= render '/layouts/logo' %>

<section>
    <div class="section-wrapper">
        <% @applications.each do |application| %>
            <div>
                student: <%= application.users.first_name %> <%= application.users.last_name %>
            </div>
            <div>
                email: <%= application.users.email %>
            </div>
            <div>
                major: <%= application.major %>
            </div>
            <div>
                year: <%= application.year %>
            </div>
            <div>
                Past courses: <%= application.past_courses %>
            </div>
            <div>
                current courses: <%= application.current_courses %>
            </div>
            <div>
                interests: <%= application.interests %>
            </div>
            <div>
                why: <%= application.why %>
            </div>
            <div>
                favorite: <%= application.favorite %>
            </div>
            <div>
                recommender: <%= application.recommender %>
            </div>
            <div>
                other math dept: <%= application.alternate %>
            </div>
            <div>
                how you found us: <%= application.how %>
            </div>
            <div>
                questions: <%= application.questions %>
            </div>
        <% end %>
    </div>

</section>

<nav>
    <div class='nav-container'>
        <div class='nav-item'>
            <%= link_to "#" do %>
                <div class="past button"></div>
                <span class="past label">past projects</span>
            <% end %>
        </div>
        <div class='nav-item'>
            <%= link_to "#" do %>
                <div class="mentor button"></div>
                <span class="mentor label">mentors</span>
            <% end %>
        </div>
        <div class='nav-item'>
            <%= link_to "#" do %>
                <div class="participants button"></div>
                <span class="participants label">participants</span>
            <% end %>
        </div>
        <div class='nav-item'>
            <%= link_to "#" do %>
                <div class="info button"></div>
                <span class="info label">information</span>
            <% end %>
        </div>
    </div>
</nav>

